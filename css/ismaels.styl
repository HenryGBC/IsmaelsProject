gris_oscuro = #444
naranja = #DD4F24

@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a 
	color naranja	
body
	background #E8E8E8
	font-family Arial
	font-size 16px
label
	display inline-block
	width 60px
	background naranja
	padding 0.1em
	text-align center
footer
	background naranja
	color rgba(white,0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong 
			display block
		.mejor
			&:before
			&:after
				content "-"

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 2
	h1
		font-family: 'Autour One', cursive;
	.logo
		width 120px
		float left
		border-right 1px solid naranja
		
		img
			height 80px
			width 80px

		
		

	.iniciosesion
		text-shadow 1px 1px 0px black
		
		.redes
			margin-top 60px
			margin-left 120px

			a
				text-decoration none
				color white
				padding 0.1em 
			.twitter
				&:after
					content "\e602"
					font-family iconos
			.facebook
				&:after
					content "\e603"
					font-family iconos
			.gplus
				&:after
					content "\e604"
					font-family iconos
			.mail
				&:after
					content "\e607"
					font-family iconos				

			
				
				

		.titulo
			margin 0 180px 0 70px
			font-size 20px
			font-weight normal
			margin 0
			padding 0

		.registro
			float right
			right 10px
			top -15px

			.usuario
				padding 0.2em
				input 
					font-size 14px
			.clave
				padding 0.2em
				input 
					font-size 14px

			.iniciar
				padding 0.2em
				a
					color white
					text-decoration none
					background naranja
					padding 0.1em

				.ingresar
					margin-right 12.5px
					box-shadow 1px 1px 0px black
					&:before
						content "\e605"
						font-family iconos

						
				.registrarse
					box-shadow 1px 1px 0px black
		.bienvenida
			display none
			float right
			.bienvenido
				float left
				margin-top 0px
			.usuario
				float right
				
				
		
nav
	background naranja
	border-left 15px solid white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0px
		position absolute
		top 0
		

	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		overflow-y hidden
		white-space nowrap

		&::-webkit-scrollbar
			display none




		li
			display inline-block

		a
			
			color white
			display block
			margin 0 0.5em
			padding 0 0.2em
			text-decoration none
			
			
			&:hover
				background rgba(black,0.1)


	

.menu_semana
	height 120px
	border 5px
	box-shadow 1px 1px 1px 1px black
	background gris_oscuro
	margin-top 50px
	white-space nowrap
	overflow-x auto
	&::-webkit-scrollbar
			display none

	.platosms
		display inline-block
		padding 1em
		position relative
		

		.platoms
			text-align center
			position relative
			&:after
				content "\e608"
				font-family iconos
				color white
				background naranja
				position absolute
				border-radius 10%
				top 20px
				width 25px
				
			img
				height 50px
				width 50px
				border-radius 50%
				

				&:hover
					height 60px
					width 60px
		.nom_plato
			background naranja
			color white
			text-decoration none
			text-align center
			padding 0.2em
			
		
		
		.icono_agregar
			background naranja	
			color white
			padding 2px
			top 20px
			position absolute
			text-align right 
			text-decoration none
			width 30px
			height 15px
			z-index 5
			&:after
				content "\e600"
				font-family iconos

.seleccionarplato
	
	.slider
		img
			width 80%
				
	.descripcion
		background gris_oscuro
		box-shadow 1px 1px 1px 1px black
		color white
		.titulosp
			text-align center
			color naranja
		.tituloingredientes
			text-align center
			font-size 16px
			color naranja
		.precio
			strong
				color naranja

	

	.ordenar
		margin-top 10px
		position relative
		padding 0.5em
		

		.anadir	
			background naranja 
			color white
			position absolute
			text-decoration none
			padding 0.3em
			left 150px
			bottom 8px
			&:before
				content "\e608"
				font-family iconos


		input
			width 50px


.pedido
	text-align center
	padding 1.5em
	background gris_oscuro
	color white
	margin-bottom 70px
	box-shadow 1px 1px 1px 1px black
	.plato
		padding 0.5em

		a
			background naranja
			color white
			text-decoration none
			padding 0.2em
			&:after
				content "\e601"
				font-family iconos
				margin-left 10px
	.total
		padding 0.2em
	.realizarpedido
		background naranja
		color white
		text-decoration none
		margin-top -10px
		padding 0.2em
		&:after
			content "\e606"
			font-family iconos
			margin-left 10px

		


@media screen and (min-width: 768px)

	header
		.iniciosesion
			.registro
				margin-top -25px
			.redes
				margin-top 40px	

	
	.seleccionarplato
		
		.slider
			
			img
				width  40%
				height 300px
				margin-left 10px
		.descripcion
			box-shadow -1px -1px 1px 1px black
			float right
			width 300px
			height 330px
			margin-top -330px
			position relative
		.ordenar
			float right
			position relative
			margin-right 170px
			.anadir
				padding 0.2em
				width 80px
	
	.menu_semana
		float left
		width  300px
		height 350px
		margin-top -10px
		overflow-y scroll 
		.platosms
			display block
			position relative
			.platoms
				margin-left 150px

			.nom_plato
				position absolute
				top 30px

	.pedido
		margin-top 80px
